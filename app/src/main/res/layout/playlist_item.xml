<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/set_size_160"
    android:layout_height="@dimen/set_size_196"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/set_searchItem_8dp"
    android:layout_marginVertical="@dimen/set_padding16"
    android:orientation="vertical">

<ImageView
    android:id="@+id/artwork"
    android:layout_width="@dimen/set_size_160"
    android:layout_height="@dimen/set_size_160"
    app:srcCompat="@drawable/incorrect_link312"
    android:src="@drawable/radius_image"/>
<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/set_padding16"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="@dimen/set_textSize12"
    android:textColor="?attr/colorPrimaryVariant"
    android:fontFamily="@font/ys_display_regular"
    tools:text="Название"/>
<TextView
    android:id="@+id/description"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/set_padding16"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="@dimen/set_textSize12"
    android:textColor="?attr/colorPrimaryVariant"
    android:fontFamily="@font/ys_display_regular"
    tools:text="0 треков"/>
</LinearLayout>