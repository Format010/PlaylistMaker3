<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlaylistMaker">

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/yp_white"
        android:text="@string/settings"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/text"
        app:icon="@drawable/back"
        app:iconPadding="@dimen/set_size20"
        app:iconTint="?attr/colorPrimaryVariant"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        style="?android:attr/borderlessButtonStyle"/>

    <Switch
        android:id="@+id/switch1"
        style="@style/ButtonStyleSettings"
        android:layout_marginTop="80dp"
        android:drawableTint="#EAEAEA"
        android:paddingRight="6dp"
        android:text="@string/darkTheme"
        android:thumbTint="?attr/colorOnPrimary"
        android:trackTint="@color/yp_grey"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonShare"
        android:text="@string/share"
        app:icon="@drawable/share"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        style="@style/ButtonStyleSettings"/>

    <Button
        android:id="@+id/buttonMailToSupport"
        android:text="@string/mailto"
        app:icon="@drawable/support"
        app:layout_constraintTop_toBottomOf="@+id/buttonShare"
        style="@style/ButtonStyleSettings"/>

    <Button
        android:id="@+id/buttonUserAgr"
        android:text="@string/useragr"
        app:icon="@drawable/forward"
        app:layout_constraintTop_toBottomOf="@+id/buttonMailToSupport"
        style="@style/ButtonStyleSettings"/>


</LinearLayout>