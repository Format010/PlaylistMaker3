<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/artwork"
            android:layout_width="@dimen/set_searchItem_img45"
            android:layout_height="@dimen/set_searchItem_img45"
            android:layout_margin="@dimen/set_searchItem_8dp"
            android:src="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/set_searchItem_8dp">

            <TextView
                android:id="@+id/track_name"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginTop="@dimen/set_marginSearchLists14"
                android:singleLine="true"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/set_textSize16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/set_marginSearchLists13"
                    android:singleLine="true"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/set_textSize11" />

                <ImageView
                    android:id="@+id/icon_item"
                    android:layout_width="@dimen/set_marginSearchLists13"
                    android:layout_height="@dimen/set_marginSearchLists13"
                    android:scaleType="centerInside"
                    android:paddingTop="3dp"
                    android:src="@drawable/point" />

                <TextView
                    android:id="@+id/track_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/set_marginSearchLists13"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/set_textSize11" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/right_icon_item"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/forward" />


    </LinearLayout>
</LinearLayout>