<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/new_playlist"
        style="@style/ButtonStyle"
        android:layout_marginTop="@dimen/set_size24"
        android:text="@string/button_add_playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/error_playlist_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_playlist"
        app:srcCompat="@drawable/not_search" />

    <TextView
        android:id="@+id/error_playlist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimaryVariant"
        android:fontFamily="@font/ys_text_medium"
        android:textSize="@dimen/set_textSize19"
        android:gravity="center"
        android:layout_marginTop="@dimen/set_padding16"
        android:text="@string/playlist_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_playlist_image" />
</androidx.constraintlayout.widget.ConstraintLayout>