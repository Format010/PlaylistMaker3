<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/bottom_sheet_item_layout"
android:layout_width="match_parent"
android:layout_height="61dp"
android:orientation="horizontal">
<ImageView
    android:id="@+id/cover_icon"
    android:layout_width="@dimen/set_searchItem_img45"
    android:layout_height="@dimen/set_searchItem_img45"
    android:layout_marginVertical="@dimen/rectangle_top_8"
    android:layout_marginStart="@dimen/set_marginSearchLists13"
    />

<LinearLayout
    android:id="@+id/touchable_area"
    android:layout_width="0dp"
    android:layout_height="@dimen/set_size46"
    android:layout_marginHorizontal="@dimen/set_padding_10"
    android:layout_marginVertical="@dimen/rectangle_top_8"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/set_padding_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorPrimaryVariant"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/set_textSize16"
        tools:text="Название плейлиста" />
    <TextView
        android:id="@+id/numTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/set_textSize11"
        android:fontFamily="@font/ys_display_regular"
        tools:text="0 треков" />

</LinearLayout>
</LinearLayout>